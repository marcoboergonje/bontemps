@model IEnumerable<BonTemps.Areas.Systeem.Models.Menu>

@{
    ViewData["Title"] = "Index";
}

<h1 class="titel">Menu's</h1>


<table id="cmstable" class="table table-bordered table-striped table-hover" style="overflow:auto;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu_naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beschrijving)
            </th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="FirstTD">
                @Html.DisplayFor(modelItem => item.Menu_naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beschrijving)
            </td>
            <td style="text-align:center;table-layout:fixed;display:table-cell;width:40%;min-width:40%;">
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn deletebtn"><i class="fas fa-trash-alt delete"></i></a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn darkblue"><i class="fas fa-edit edit"></i></a>
                <a asp-controller="Menu" asp-action="Detail" asp-route-id="@item.Id" class="btn darkblue"><i class="fas fa-info-circle details"></i><i class="fas fa-globe details"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
    <a asp-action="Create" class="btn darkblue"><i class="fas fa-utensils create"></i><i class="fas fa-plus create"></i></a>
    <a asp-controller="Menu" asp-action="Index" class="btn darkblue">Op site bekijken<i class="fas fa-globe create"></i></a>

