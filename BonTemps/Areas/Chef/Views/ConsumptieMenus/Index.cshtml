@model IEnumerable<BonTemps.Areas.Systeem.Models.ConsumptieMenu>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="cmstable" class="table table-bordered table-striped table-hover" style="overflow:auto;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consumptie)
            </th>
            <th>
                Acties
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Menu.Menu_naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Consumptie.Naam)
                </td>
                   <td style="text-align:center;table-layout:fixed;display:table-cell;width:40%;min-width:40%;">
                <a  asp-action="Delete" asp-route-id="@item.Id" class="btn deletebtn"><i class="fas fa-trash-alt delete"></i></a>
            </td>
            </tr>
        }
    </tbody>
</table>
</body>
</html>
