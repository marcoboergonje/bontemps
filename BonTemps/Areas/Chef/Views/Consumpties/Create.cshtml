@model BonTemps.Areas.Systeem.Models.ConsumptieAllergenen

@{
    ViewData["Title"] = "Create";

}

<h1>Consumptie Create</h1>

<div class="table">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Consumptie.Naam" class="control-label"></label>
                <input asp-for="Consumptie.Naam" class="form-control" />
                <span asp-validation-for="Consumptie.Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consumptie.Beschrijving" class="control-label"></label>
                <input asp-for="Consumptie.Beschrijving" class="form-control" />
                <span asp-validation-for="Consumptie.Beschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consumptie.Prijs" class="control-label"></label>
                <input asp-for="Consumptie.Prijs" class="form-control" />
                <span asp-validation-for="Consumptie.Prijs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consumptie.CategoryId" class="control-label"></label>
                <select asp-for="Consumptie.CategoryId" class="form-control" asp-items="ViewBag.CategoryName"></select>
            </div>
            <div class="form-group">
                @*<label asp-for="ConsAller" class="control-label"></label>
                    <select asp-for="ConsAller" class="form-control" asp-items="ViewBag.Allergenen"></select>*@
                @Html.ListBox("Allergenen", (MultiSelectList)ViewBag.Allergenen, new { size = 8 })


            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="button-save" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="create" asp-action="Index">Terug naar menu overzicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


