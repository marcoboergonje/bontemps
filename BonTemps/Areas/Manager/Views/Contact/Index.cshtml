@model IEnumerable<BonTemps.Areas.Manager.Models.ContactInfo>

@{
    ViewData["Title"] = "Index";
}


@foreach(var item in Model){
<div class="row">
    <a class="col-md-5 contact-edit-btn" href="#">
        <div class="">
            <i class="fas fa-address-book edit-icon"></i>
            <p class="text-btn-contact">Restaurant informatie aanpassen</p>
        </div>
    </a>
    <a class="col-md-5 openingstijden-edit-btn" asp-action="Edit" asp-route-id="@item.Id">
        <div class="">
            <i class="far fa-clock edit-icon"></i>
            <p class="text-btn-tijden">Openingstijden aanpassen</p>
        </div>
    </a>
</div>
<div class="row">
    <a class="col-md-5 email-edit-btn" asp-controller="Email" asp-action="index" asp-area="Systeem">
        <div class="">
            <i class="far fa-envelope-open edit-icon"></i>
            <p class="text-btn-email">Mail overzicht</p>
        </div>
    </a>
    <a class="col-md-5 openingstijden-edit-btn" asp-action="Shutdown" asp-controller="ManagerBoard" asp-area="Manager">
        <div class="">
            <i class="fas fa-sign-out-alt edit-icon"></i>            
            <p class="text-btn-email">Systeem Afsluiten</p>
        </div>
    </a>
</div>

}





