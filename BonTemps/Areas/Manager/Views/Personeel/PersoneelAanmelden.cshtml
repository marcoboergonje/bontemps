@model Klant
@{
    ViewData["Title"] = "Create";
}

<div id="createform">
    <h3 class="titel createform">Personeel aanmaken</h3>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordHash" class="control-label">Password Hash</label>
            <input asp-for="PasswordHash" class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Rolnaam" class="control-label">Rol</label>
            <select asp-for="Rolnaam" class="form-control" asp-items="ViewBag.CategoryName"></select>
        </div>
        <div class="form-group">
            <button asp-action="Index" class="btn darkred CrudCancel">
                Annuleren  <i class="fas fa-times white"></i>
            </button>
            <button type="submit" class="btn darkblue CrudCreate" style="float:right;">
                Aanmaken  <i class="fas fa-plus white"></i>
            </button>
        </div>
    </form>
</div>


