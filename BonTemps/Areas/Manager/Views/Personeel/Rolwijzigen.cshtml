@model Klant
@{
    ViewData["Title"] = "View";
    string name = Model.Email;
}

<div id="createform">
    <h3 class="titel createform">Rol wijzigen</h3>
    <h4 class="titel createform" style="font-size:15px;">User : @name</h4>
    <hr />
    <form asp-action="UpdateUserRole">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Rolnaam" class="control-label">Rol</label>
            <select asp-for="Rolnaam" class="form-control" asp-items="ViewBag.Rollen"></select>
        </div>
        <div class="form-group">
            <label asp-for="Email" hidden class="control-label"></label>
            <input asp-for="Email" hidden class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button asp-action="Index" class="btn darkred CrudCancel">
                Annuleren  <i class="fas fa-times white"></i>
            </button>
            <button type="submit" class="btn darkblue CrudCreate" style="float:right;">
                Aanmaken  <i class="fas fa-plus white"></i>
            </button>
        </div>
    </form>
</div>
