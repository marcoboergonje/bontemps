@model Klantgegevens

@{
    ViewData["Title"] = "PersoneelGegevens";
}

<div id="createform">
    <h3 class="titel createform">Gebruikersgegevens</h3>
    <h4 class="titel createform" style="font-size:15px;">User : @ViewBag.user</h4>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Voornaam" class="control-label"></label>
            <input asp-for="Voornaam" class="form-control" />
            <span asp-validation-for="Voornaam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Achternaam" class="control-label"></label>
            <input asp-for="Achternaam" class="form-control" />
            <span asp-validation-for="Achternaam" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Geslacht" class="control-label"></label>
            <input asp-for="Geslacht" class="form-control" />
            <span asp-validation-for="Geslacht" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GeboorteDatum" class="control-label">Geboorte Datum</label>
            <input asp-for="GeboorteDatum" class="form-control" />
            <span asp-validation-for="GeboorteDatum" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Geslacht" class="control-label"></label>
            <input asp-for="Geslacht" class="form-control" />
            <span asp-validation-for="Geslacht" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TelefoonNummer" class="control-label">Telefoon Nummer</label>
            <input asp-for="TelefoonNummer" class="form-control" />
            <span asp-validation-for="TelefoonNummer" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button asp-action="Index" class="btn darkred CrudCancel">
                Annuleren  <i class="fas fa-times white"></i>
            </button>
            <button asp-action="LinkGegevens" asp-route-id="@ViewBag.user" class="btn darkblue CrudCreate" style="float:right;">
                Opslaan  <i class="fas fa-plus white"></i>
            </button>
        </div>
    </form>
</div>

