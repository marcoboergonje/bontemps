@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row login-div">
    <div class="col-md-8 center">
        <section>
            <div class="row text-center">
                <i class="fas fa-user-circle  iconlogin"></i>
            </div>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label> E-mail </label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Wachtwoord</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Onthoud mij!
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <p>
                        Wachtwoord<a id="forgot-password" asp-page="./ForgotPassword"> vergeten?</a>
                    </p>
                    <p>
                        Nog geen account registreer  <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">hier.</a>
                    </p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-login">Inloggen</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
