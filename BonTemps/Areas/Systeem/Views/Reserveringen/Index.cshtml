@model IEnumerable<Reservering>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Reservering overzicht</h1>
    <hr />
    <p>
        <a asp-action="Create" class="btn btn-primary">Reservering toevoegen</a>
    </p>
    <table id="jquerytable" class="table table-bordered table-striped table-hover" style="width:100%;">
        <thead>
            <tr>
                <th>
                    Naam
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Huistelefoon
                </th>
                <th>
                    Mobiel
                </th>
                <th>
                    Aantal Personen
                </th>
                <th>
                    Datum aanmaking
                </th>
                <th>
                    Datum Reservering
                </th>
                <th>Actie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NaamReserveerder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HuisTelefoonNummer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobielTelefoonNummer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AantalPersonen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReserveringAangemaakt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReserveringsDatum)
                </td>
                <td style="text-align:center;width:100%;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Bewerken</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Verwijderen</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>
