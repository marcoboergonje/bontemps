@model BonTemps.Areas.Systeem.Models.Tafels

@{
    ViewData["Title"] = "Edit";
}

<div id="createform">
    <h3 class="titel createform">Tafel #<span>@Html.DisplayFor(model => model.Id)</span> bewerken</h3>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Zitplaatsen" class="control-label"></label>
            <input asp-for="Zitplaatsen" class="form-control" />
            <span asp-validation-for="Zitplaatsen" class="text-danger"></span>
        </div>
        <div class="switch-container">
            <label>Bezet</label>
            <br />
            <label class="switch">
                <input type="checkbox" asp-for="Bezet">
                <span class="slider round"></span>
            </label>
        </div>
        <div class="form-group">
            <button asp-action="Index" class="btn darkred CrudCancel">
                Annuleren  <i class="fas fa-times white"></i>
            </button>
            <button type="submit" class="btn darkblue CrudCreate" style="float:right;">
                Opslaan  <i class="fas fa-plus white"></i>
            </button>
        </div>
    </form>
</div>

