@model IEnumerable<BonTemps.Areas.Systeem.Models.Tafels>

@{
    ViewData["Title"] = "Index";
}

<h1>Tafels</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary">Tafel toevoegen</a>
</p>
<br />
<table id="jquerytable" class="table table-bordered table-striped table-hover" style="overflow:auto;">
    <thead>
        <tr>
            <th>
                Tafelnummer
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zitplaatsen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bezet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zitplaatsen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bezet)
            </td>
            <td style="text-align:center;table-layout:fixed;display:table-cell;width:40%;min-width:40%;">
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Verwijderen</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Bewerken</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                @if (item.Bezet == true)
                {
                    <a asp-action="Afrekenen" asp-route-id="@item.Id" class="btn btn-warning">Afrekenen</a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>
