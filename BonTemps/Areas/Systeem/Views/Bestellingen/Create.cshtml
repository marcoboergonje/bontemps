@model BonTemps.Areas.Systeem.Models.Bestelling

@{
    ViewData["Title"] = "Create";
}

<h1 id="test">Bestelling plaatsen</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" id="categorieId">
                <label asp-for="Consumptie.CategoryId" class="control-label">Categorie</label>
                <select asp-for="Consumptie.CategoryId" class="form-control" id="categorieid" onclick="GetSelectedValue()">
                    <option value="1" selected>Eten</option>
                    <option value="2">Drinken</option>
                    <option value="3">Dessert</option>
                </select>
            </div>
            <div class="form-group" id="eten" style="visibility:visible">
                <label asp-for="ConsumptieId" class="control-label">Eten</label>
                <select asp-for="ConsumptieId" class="form-control" asp-items="ViewBag.ConsumptieEten"></select>
            </div>
            <div class="form-group" id="drinken" style="visibility:hidden">
                <label asp-for="ConsumptieId" class="control-label">Drinken</label>
                <select asp-for="ConsumptieId" class="form-control" asp-items="ViewBag.ConsumptieDrinken"></select>
            </div>
            <div class="form-group" id="dessert" style="visibility:hidden">
                <label asp-for="ConsumptieId" class="control-label">Dessert</label>
                <select asp-for="ConsumptieId" class="form-control" asp-items="ViewBag.ConsumptieDesserts"></select>
            </div>
            <div class="form-group">

                <label asp-for="TafelsId" class="control-label">Tafel</label>
                <select asp-for="TafelsId" class="form-control" asp-items="ViewBag.TafelsId"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<p id="result"></p>

<script>

    function GetSelectedValue() {
        var e = document.getElementById("categorieid");
        var result = e.options[e.selectedIndex].value;
        var text = e.options[e.selectedIndex].text;
        document.getElementById("result").innerHTML = result;

        if (result == "1") {
            document.getElementById("eten").style.visibility = "visible";
            document.getElementById("eten").style.display = "block";
            document.getElementById("drinken").style.visibility = "hidden";
            document.getElementById("drinken").style.display = "none";
            document.getElementById("dessert").style.visibility = "hidden";
            document.getElementById("dessert").style.display = "none";

        } else if (result == "2") {
            document.getElementById("drinken").style.visibility = "visible";
            document.getElementById("drinken").style.display = "block";
            document.getElementById("eten").style.visibility = "hidden";
            document.getElementById("eten").style.display = "none";
            document.getElementById("dessert").style.visibility = "hidden";
            document.getElementById("dessert").style.display = "none";
        } else if (result == "3") {
            document.getElementById("dessert").style.visibility = "visible";
            document.getElementById("dessert").style.display = "block";
            document.getElementById("eten").style.visibility = "hidden";
            document.getElementById("eten").style.display = "none";
            document.getElementById("drinken").style.visibility = "hidden";
            document.getElementById("drinken").style.display = "none";
        }
    }

</script>
