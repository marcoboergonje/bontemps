@model IEnumerable<BonTemps.Areas.Systeem.Models.Bestelling>

@{
    ViewData["Title"] = "AfgerondeBestellingen";
}

<h1>AfgerondeBestellingen</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Consumptie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tafels)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bestellingsdatum_afgerond)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Afgerond)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Consumptie.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tafels.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bestellingsdatum_afgerond)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Afgerond)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
