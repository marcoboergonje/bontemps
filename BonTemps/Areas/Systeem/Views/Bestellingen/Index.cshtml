@model IEnumerable<BonTemps.Areas.Systeem.Models.Bestelling>

@{
    ViewData["Title"] = "Index";
}

<h1 class="titel">Bestellingen</h1>
<table id="cmstable" class="table table-bordered table-striped table-hover" style="overflow:auto;">
    <thead>
        <tr>
            <th>
                Categorie
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Consumptie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aantal)
            </th>
            <th>
                Tafel
            </th>
            <th>
                Tijd van bestelling
            </th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="FirstTD">
                @Html.DisplayFor(modelItem => item.Consumptie.Category.Naam)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Consumptie.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aantal)
            </td>
            <td style="width:8%;text-align:center;">
                @Html.DisplayFor(modelItem => item.Tafels.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bestellingsdatum_Tijd)
            </td>
            <td style="text-align:center;table-layout:fixed;display:table-cell;width:40%;min-width:40%;">
                <a asp-action="Afronden" asp-route-id="@item.Id" class="btn betalen"><i class="fas fa-clipboard betalen"></i><i class="fas fa-check betalen"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn delete"><i class="fas fa-trash-alt delete"></i></a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn darkblue"><i class="fas fa-edit edit"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn darkblue"><i class="fas fa-info-circle details"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn darkblue"><i class="fas fa-clipboard create"></i><i class="fas fa-plus create"></i></a>
