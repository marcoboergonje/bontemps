@model IEnumerable<BonTemps.Areas.Manager.Models.ContactInfo>
@{
    ViewData["Title"] = "Contact Page";
}


@foreach (var item in Model)
{

<div class="scrollbar">
    <div class="contact-page">
        <div class="title-balk">
            <h1 class="title heading-primairy"><b>Contact</b></h1>
        </div>
        <div class="Contact">
            <h1 class="heading-primairy">Adres</h1>
            <p>
                @Html.DisplayFor(modelItem => item.Adres)
            </p>
            <p>
                @Html.DisplayFor(modelItem => item.Postcode)
            </p>

            <h1 class="heading-primairy tel">Telefoon en Email</h1>
            <p>
                <b>Telefoon : </b> @Html.DisplayFor(modelItem => item.Telefoonnummer)
            </p>
            <p>
                <b>Email : </b>    @Html.DisplayFor(modelItem => item.Email)
            </p>


        </div>
        <div class="openingstijden">
            <h1 class="heading-primairy">Openingstijden</h1>

            <p>
                <b>Maandag : </b>@Html.DisplayFor(modelItem => item.MaandagOpen) - @Html.DisplayFor(modelItem => item.MaandagSluit)
            </p>

            <p>
                <b>Dinsdag : </b>@Html.DisplayFor(modelItem => item.DinsdagOpen) - @Html.DisplayFor(modelItem => item.DinsdagSluit)
            </p>

            <p>
                <b>Woensdag : </b>@Html.DisplayFor(modelItem => item.WoensdagOpen) - @Html.DisplayFor(modelItem => item.WoensdagSluit)
            </p>

            <p>
                <b>Donderdag : </b>@Html.DisplayFor(modelItem => item.DonderdagOpen) - @Html.DisplayFor(modelItem => item.DonderdagSluit)
            </p>

            <p>
                <b>Vrijdag : </b>@Html.DisplayFor(modelItem => item.VrijdagOpen) - @Html.DisplayFor(modelItem => item.VrijdagSluit)
            </p>

            <p>
                <b>Zaterdag : </b>@Html.DisplayFor(modelItem => item.ZaterdagOpen) - @Html.DisplayFor(modelItem => item.ZaterdagSluit)
            </p>
            <p>
                <b>Zondag : </b>@Html.DisplayFor(modelItem => item.ZondagOpen) - @Html.DisplayFor(modelItem => item.ZondagSluit)
            </p>
        </div>
    </div>
</div>
        }

    